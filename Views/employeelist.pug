
extends layout 
block content 
    header.card-header
        h4.card-title Welcome! Stay clean! 
            div.card
                div.card-header
                    h5.card-title Employee info
    div.form-row
        div.col.form-group.col-md-12   
            form.search(action='/list')
                div.form-row
                    div.col-md-8
                        input.form-control(name='gender' placeholder="Enter your search term(gender) ...")
                    div.col-md-4
                        input.btn.btn-primary.btn-block(type="submit")            
    table.table.table-striped 
        thead.thead-dark
            tr
                th Full Name 
                th Date of Birth
                th Gender
                th Past incidences
                th Role
                th 
                th
                th
        tbody
            if users.length
            each user in users
                tr
                    td #{user.lastname +' '+ user.firstname}
                    td #{user.date}
                    td #{user.gender}
                    td #{user.pastincidences}
                    td #{user.role}
                    td 
                        a(href='/update/'+user._id) Update
                    td
                    td
                        form(method="post" action='/delete')
                            input(type="hidden", placeholder="", name="id", value=user._id)
                            button.btn.btn-dark.btn-block(type="submit") Delete
                
            


