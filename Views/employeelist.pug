
extends layout 
block content 
    header.card-header
        h4.card-title Welcome 
            div.card
                div.card-header
                    h5.card-title Employee info
    table.table.table-striped
        thead 
            tr
                th Full Name 
                th Date of Birth
                th Gender
                th Past incidences
                th Role
        tbody
            if users.length
            each user in users
                tr
                    td #{user.lastname +' '+ user.firstname}
                    td #{user.date}
                    td #{user.gender}
                    td #{user.pastincidences}
                    td #{user.role}
        


